{
  "manifest_version": 3,
  "name": "Rupert AI Voice Assistant",
  "version": "2.0.1",
  "description": "AI-powered voice assistant for complete web navigation",

  "permissions": [
    "tabs",
    "activeTab", 
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Rupert AI Voice Assistant"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", 
      "enhanced_command_processor.js", 
      "enhanced_speech_recognition_config.js", 
      "wake-word-detector.js",
      "command-overlay.js", 
      "content.js"],
      "css": ["styles.css", 
      "command-overlay.css"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png", 
    "128": "icon_128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "command-overlay.html", 
        "command-overlay.css",        
        "command-overlay.js",  
        "config/env.json",
        "*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 