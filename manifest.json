{
  "manifest_version": 3,
  "name": "Rupert AI Voice Assistant",
  "version": "2.0.1",
  "description": "AI-powered voice assistant for complete web navigation",

  "permissions": [
    "tabs",
    "activeTab", 
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Rupert AI Voice Assistant"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 